<form>
	<div class="form-group">
		<label>Formula</label>
		<input type="text" name="formula" value="{{formula}}" disabled>
	</div>
	<div class="form-group">
		<label>Bônus Situacional</label>
		<input type="text" name="bonus">
	</div>
	{{#if hasCritical}}
		<div class="form-group">
			<label class="flex-1">Valor de Crítico</label>
			<input type="text" name="critical" value="15">
		</div>
	{{/if}}
	{{#if actor}}
		<div class="form-group">
			<label class="flex-1">Campo da Ficha</label>
			<select name="dropdown">
				{{selectOptions dropdown nameAttr="value" labelAttr="label" localize=true blank="—"}}
			</select>
		</div>
	{{/if}}
	<hr>
	<div class="form-group">
		<label>Modo de Rolagem</label>
		<select name="rollMode">
				{{selectOptions rollModes selected=defaultRollMode localize=true}}
		</select>
	</div>
</form>