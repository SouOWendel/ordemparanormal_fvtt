<section class="tab flexcol {{tab.cssClass}}" data-tab="inventory" data-group="primary">
	<div class="inventory-body">
		<section class="inventory-prestige">
			<div class="patents">
				<input type="number" name="system.patent.itemLimit1" value="{{system.patent.itemLimit1}}"
				class="limit" placeholder="I" data-dtype="Number" data-tooltip="Limite de Categoria 1" disabled>
				<input type="number" name="system.patent.itemLimit2" value="{{system.patent.itemLimit2}}"
				class="limit" placeholder="II" data-dtype="Number" data-tooltip="Limite de Categoria 2" disabled>
				<input type="number" name="system.patent.itemLimit3" value="{{system.patent.itemLimit3}}"
				class="limit" placeholder="III" data-dtype="Number" data-tooltip="Limite de Categoria 3" disabled>
				<input type="number" name="system.patent.itemLimit4" value="{{system.patent.itemLimit4}}"
				class="limit" placeholder="IV" data-dtype="Number" data-tooltip="Limite de Categoria 4" disabled>
				<div class="prestige">
					<input type="text" name="system.patent.prestigePoints" value="{{system.patent.prestigePoints}}"
					placeholder="Pontos de Prestígio" data-tooltip="Pontos de Prestígio" data-dtype="Number">
				</div>
				<span class="name" data-tooltip="Nome da Patente">{{system.patent.name}}</span>
				<span class="credit" data-tooltip="Limite de Crédito">{{system.patent.creditLimit}}</span>
			</div>
		</section>
		<div class="inventory-details">
			<ol class="items-list">
				<li class="item flexrow items-header">
					<div class="item-name">{{localize "op.armament.plural"}}</div>
					<div class="item-space">{{localize "op.proficiency"}}</div>
					<div class="item-space">{{localize "op.critical"}}</div>
					<div class="item-space">{{localize "op.range"}}</div>
					<div class="item-space">{{localize "op.weight"}}</div>
					<div class="item-controls">
						{{#if @root.editable}}
							<a 
							class="item-control item-create" 
							data-action="createDoc" 
							title="{{localize 'DOCUMENT.Create' type='Armamento'}}"
							data-document-class="Item"
							data-type="armament">
								<i class="fas fa-plus"></i>
							</a>
						{{/if}}
					</div>
				</li>
				{{#each armament as |item id|}}
				<li class="item flexrow draggable" data-drag="true" data-document-class="Item" data-item-id="{{item._id}}">
					<div class="item-name">
						<div class="item-image slide">
							<img src="{{item.img}}" title="{{item.name}}" width="24" height="24" />
							<a class="rollable" data-roll-type="item" data-action="onRoll">
								<i class="fa-solid fa-dice-d20"></i>
							</a>
						</div>
						<h4 data-tooltip="{{item.name}}">{{item.name}}</h4>
					</div>
					<div class="item-space item-prop">
						{{#if item.system.proficiency}} {{localize (concat "op.proficiencyChoicesAbbr." item.system.proficiency)}}
						{{else}} — {{/if}}
					</div>
					<div class="item-space item-prop">{{item.system.critical}}</div>
					<div class="item-space item-prop">{{item.system.range}}</div>
					<div class="item-space item-prop item-editable-resource">
						<input type="number" value="{{item.system.weight}}" placeholder="—" data-dtype="Number"
							data-name="system.weight" inputmode="numeric" pattern="[0-9+=\-]*" min="0">
					</div>
					<div class="item-controls">
						<a class="item-control" data-action="onSendChat" title="Enviar para o chat"><i class="fas fa-message"></i></a>
						<a class="item-control" data-action="onMarkItem" title="Marcar e desmarcar com item utilizado"
							><i class="{{ item.system.using.class }} fa-star"></i
						></a>
						<a class="item-control item-edit" data-action="viewDoc" title="Edit Item"><i class="fas fa-edit"></i></a>
						<a class="item-control" data-action="deleteDoc" title="Delete Item"><i class="fas fa-trash"></i></a>
					</div>
				</li>
				{{/each}}
			</ol>

			<ol class="items-list">
				<li class="item flexrow items-header draggable">
					<div class="item-name">{{localize "op.generalEquipment.plural"}}</div>
					<div class="item-space">{{localize "op.category"}}</div>
					<div class="item-space">{{localize "op.weight"}}</div>
					<div class="item-space">{{localize "op.quantity"}}</div>
					<div class="item-controls">
						{{#if @root.editable}}
						<a 
						class="item-control item-create" 
						data-action="createDoc" 
						title="Create item"
						data-document-class="Item"
						data-type="generalEquipment">
							<i class="fas fa-plus"></i>
						</a>
						{{/if}}
					</div>
				</li>
				{{#each generalEquip as |item id|}}
				<li class="item flexrow draggable" data-drag="true" data-document-class="Item" data-item-id="{{item._id}}">
					<div class="item-name">
						<div class="item-image">
							<a class="rollable" data-action="onRoll" data-roll-type="item">
								<img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
							</a>
						</div>
						<h4 data-tooltip="{{item.name}}">{{item.name}}</h4>
					</div>
					<div class="item-space item-prop item-editable-resource">
						<input type="number" value="{{item.system.category}}" placeholder="—" data-dtype="Number"
							data-name="system.category" inputmode="numeric" pattern="[0-9+=\-]*" min="0">
					</div>
					<div class="item-space item-prop item-editable-resource">
						<input type="number" value="{{item.system.weight}}" placeholder="—" data-dtype="Number"
							data-name="system.weight" inputmode="numeric" pattern="[0-9+=\-]*" min="0">
					</div>
					<div class="item-space item-prop item-editable-resource">
						{{#if @root.owner}}
							<a class="adjustment-button" data-action="decrease" data-property="system.quantity">
								<i class="fas fa-minus"></i>
							</a>
						{{/if}}
						<input type="number" value="{{item.system.quantity}}" placeholder="0" data-dtype="Number"
							data-name="system.quantity" inputmode="numeric" pattern="[0-9+=\-]*" min="0">
						{{#if @root.owner}}
							<a class="adjustment-button" data-action="increase" data-property="system.quantity">
								<i class="fas fa-plus"></i>
							</a>
						{{/if}}
					</div>
					<div class="item-controls">
						<a class="item-control" data-action="onSendChat" title="Enviar para o chat"><i class="fas fa-message"></i></a>
						<a class="item-control" data-action="onMarkItem" title="Marcar e desmarcar com item utilizado"
							><i class="{{ item.system.using.class }} fa-star"></i
						></a>
						<a class="item-control item-edit" data-action="viewDoc" title="Edit Item"><i class="fas fa-edit"></i></a>
						<a class="item-control" data-action="deleteDoc" title="Delete Item"><i class="fas fa-trash"></i></a>
					</div>
				</li>
				{{/each}}
			</ol>

			<ol class="items-list">
				<li class="item flexrow items-header">
					<div class="item-name">{{localize "op.protection.plural"}}</div>
					<div class="item-space">{{localize "op.defense"}}</div>
					<div class="item-space">{{localize "op.weight"}}</div>
					<div class="item-space">{{localize "op.quantity"}}</div>
					<div class="item-controls">
						{{#if @root.editable}}
							<a class="item-control" 
							data-action="createDoc" 
							title="Create item"
							data-document-class="Item"
							data-type="protection">
								<i class="fas fa-plus"></i>
							</a>
						{{/if}}
					</div>
				</li>
				{{#each protection as |item id|}}
				<li class="item flexrow draggable" data-drag="true" data-document-class="Item" data-item-id="{{item._id}}">
					<div class="item-name">
						<div class="item-image">
							<a class="rollable" data-action="roll" data-roll-type="item"
								><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"
							/></a>
						</div>
						<h4 data-tooltip="{{item.name}}">{{item.name}}</h4>
					</div>
					<div class="item-space item-prop">{{item.system.defense}}</div>
					<div class="item-space item-prop item-editable-resource">
						<input type="number" value="{{item.system.weight}}" placeholder="—" data-dtype="Number"
							data-name="system.weight" inputmode="numeric" pattern="[0-9+=\-]*" min="0">
					</div>
					<div class="item-space item-prop item-editable-resource">
						{{#if @root.owner}}
							<a class="adjustment-button" data-action="decrease" data-property="system.quantity">
								<i class="fas fa-minus"></i>
							</a>
						{{/if}}
						<input type="number" value="{{item.system.quantity}}" placeholder="0" data-dtype="Number"
							data-name="system.quantity" inputmode="numeric" pattern="[0-9+=\-]*" min="0">
						{{#if @root.owner}}
							<a class="adjustment-button" data-action="increase" data-property="system.quantity">
								<i class="fas fa-plus"></i>
							</a>
						{{/if}}
					</div>
					<div class="item-controls">
						<a class="item-control" data-action="onSendChat" title="Enviar para o chat"><i class="fas fa-message"></i></a>
						<a class="item-control" data-action="onMarkItem" title="Marcar e desmarcar com item utilizado">
							<i class="{{ item.system.using.class }} fa-star"></i>
						</a>
						<a class="item-control item-edit" data-action="viewDoc" title="Edit Item"><i class="fas fa-edit"></i></a>
						<a class="item-control" data-action="deleteDoc" title="Delete Item"><i class="fas fa-trash"></i></a>
					</div>
				</li>
				{{/each}}
			</ol>
		</div>
	</div>
	<section class="space">
		<div class="space-body">
			<span class="spacelabel">
				{{#if system.spaces.pctMax}}
					SOBREPESO
				{{else}}
					ESPAÇOS DISPONÍVEIS
				{{/if}}
			</span>
			<span class="bar" style="width: {{system.spaces.pct}}%"></span>
			<span class="barover align-center" style="width: {{system.spaces.pctMax}}%"></span>
			<span class="label">{{system.spaces.value}} / {{system.spaces.max}}</span>
			<i class="fa-solid fa-caret-left"></i>
		</div>
	</section>
</section>